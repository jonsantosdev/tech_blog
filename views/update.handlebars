<div class="col-md-6">
    <h3>Update a Blog:</h3>

    <form class="form update-blog-form" data-id-update={{blog.id}}>
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input value="{{blog.title}}" class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>

      <div class="form-group">
        <label for="blog-content">content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content">{{blog.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

