<div class="text-center">
  <h2>{{title}}</h2>
 
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <hr>
  <h3>Comments</h3>
  {{#each comments as |comment|}}
    <li>{{comment.content}} {{comment.user.name}}</li>
  {{/each}}

<div class="col-md-6">
    <h3>Leave a comment:</h3>

    <form class="form new-comment-form" data-comment="{{id}}">
      {{!-- <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div> --}}

      <div class="form-group">
        <label for="blog-comment">content:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  <script src="/js/comment.js"></script>
</div>
